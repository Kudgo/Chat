{% trans_default_domain 'FOSUserBundle' %}
<div style="height:50px">
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-lg-6" align="center">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Site authorisation</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div style="width:500px">
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6 separator social-login-box"> <br />
                            <a href="/connect/facebook" class="btn facebook btn-block" role="button">Login with Facebook</a>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6 login-box">
                            <form role="form" action="{{ path("fos_user_security_check") }}" method="post" id="loginForm">
                                {% if csrf_token %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                {% endif %}
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                    <input type="text" id="username" name="_username" value="{{ last_username }}"
                                           class="form-control" placeholder="Username" required autofocus />
                                </div>
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                    <input type="password" id="password" name="_password" required="required"
                                           class="form-control" placeholder="Password" />
                                </div>
                                {% if error %}
                                    <div style="color:red">
                                        {{ error.messageKey|trans(error.messageData, 'security') }}
                                    </div>
                                {% endif %}
                                <p>
                                You have no account? <a href="/register/">Registration</a>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        {#<div class="col-xs-6 col-sm-6 col-md-6">#}
                        {#</div>#}
                        {#<div class="col-xs-6 col-sm-6 col-md-6">#}
                            <button type="submit" class="btn btn-labeled btn-success" form="loginForm">
                                <span class="btn-label"><i class="glyphicon glyphicon-ok"></i></span>Login</button>
                        {#</div>#}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>