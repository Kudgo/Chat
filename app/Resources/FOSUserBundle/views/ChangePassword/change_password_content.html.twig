{% trans_default_domain 'FOSUserBundle' %}

<div style="height:50px">
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-lg-6" align="center">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Ваш профиль</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div style="width:500px">
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6 separator social-login-box"> <br />
                            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                            {{ form_widget(form) }}
                            <div>
                                <input type="submit" value="{{ 'change_password.submit'|trans }}" />
                            </div>
                            {{ form_end(form) }}
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6 " style="height: 70px">
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6 " style="height: 50px">
                            <a href="/profile">Вернуться к профилю</a>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6 " style="height: 50px">
                            <a href="/chat">Вернуться к чату</a>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6 " style="height: 50px">
                            <a href="/logout">Выйти</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>